@article{HowardM.Wiseman1999AtomLasersCoherent,
  title = {Atom Lasers, Coherent States, and Coherence: {{I}}. Physically Realizable Ensembles of Pure States},
  author = {{Howard M. Wiseman} and Wiseman, Howard M. and {John A. Vaccaro} and Vaccaro, Joan A. and Vaccaro, John A.},
