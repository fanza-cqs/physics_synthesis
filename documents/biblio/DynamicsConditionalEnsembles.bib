@article{Mark2024MaximumEntropyPrinciple,
  title = {Maximum {{Entropy Principle}} in {{Deep Thermalization}} and in {{Hilbert-Space Ergodicity}}},
  author = {Mark, Daniel K. and Surace, Federica and Elben, Andreas and Shaw, Adam L. and Choi, Joonhee and Refael, Gil and Endres, Manuel and Choi, Soonwon},
